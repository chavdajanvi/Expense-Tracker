@model IEnumerable<Expense_Tracker.Models.CategoryTable>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Expense_Limit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpenseTable.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category_Expense_Limit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpenseTable.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Expense_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Expense_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Expense_ID })
        </td>
    </tr>
